<launch>
    <arg name="freq" default="10"/>
    <arg name="record" default="false"/>
    <node
        pkg="beginner_tutorials"
        name="talker"
        type="talker"
        output="screen"
        required = "true"
    >
        <param name = "freq" value = "$(arg freq)" />
    </node>
    <node
        pkg="beginner_tutorials"
        name="listener"
        type="listener"
        output="screen"
        launch-prefix="xterm -e"
    />
    <node
        pkg="rosbag"
        name="rosbag_record_talker"
        type="record"
        args="--all --output-name=$(find beginner_tutorials)/results/ROSbagFiles/listener.bag"
        if="$(arg record)"
    />
</launch>
